@model WebCoinManagement.Models.CoinsCategory
@{
    ViewBag.Title = "AddCollectionCategory";
}

<div class="content mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong>Adicionar utilizador</strong>
            </div>
            @{Html.EnableClientValidation();}
            @using (Html.BeginForm("AddCollectionCategory", "User", FormMethod.Post, new { @id = "addUserForm" }))
            {
                <div class="card-body card-block">

                    <div class="row form-group">
                        <div class="col col-md-3"><label for="text-input" class=" form-control-label">Nome</label></div>
                        <div class="col-12 col-md-9">
                            @Html.TextBox("Name", null, new { @class = "form-control", @placeholder = "Inserir Nome da categoria", @id = "text-input" })
                            @Html.ValidationMessageFor(C => C.Name)
                        </div>
                    </div>

                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fa fa-dot-circle-o"></i> Submit
                    </button>
                    <button type="reset" class="btn btn-danger btn-sm">
                        <i class="fa fa-ban"></i> Reset
                    </button>
                </div>
            }
        </div>
    </div>

</div>